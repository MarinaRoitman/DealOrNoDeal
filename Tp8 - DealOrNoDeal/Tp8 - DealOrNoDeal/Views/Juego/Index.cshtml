
@{
    ViewBag.Title = "Index";
}

<section class="my-4 pt-5">
    <div class="container">
        <h1 class="decoration">Seleccione un maletín:</h1>
        <br/>
        <br/>
        <div class="row">
            <div class="col">
               <div class="centrar">
                   @for(int i = 0; i < 13; i++)
                   {
                       <p class="encuadrePrecios efectoSombra">$@(ViewBag.DevolverValoresPosiblesMaletines[i])</p>
                       <br>
                   }
               </div>
            </div>
            <div class="col-6">
                <div class="centrar">
                @for (int k = 0; k < 26; k++){
                    <a href="@Url.Action("elegirPrimerMaletin", "Juego", new { maletin = (k+1) } )" class="noVerComoLink">
                    <img src="~/Content/Imagenes utilizadas/Maletines/@((k+1)+" Maletas.png")" alt="@("Maletas"+(k+1))" width="100">
                    </a>
                }
                </div>
            </div>
            <div class="col">
                <div class="centrar">
                    @for (int z = 13; z < 26; z++)
                    {
                        <p class="encuadrePrecios efectoSombra">$@(ViewBag.DevolverValoresPosiblesMaletines[z])</p>
                        <br>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

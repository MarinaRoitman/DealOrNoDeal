
@{
    ViewBag.Title = "Juego";
}

<section class="my-4 pt-5">
    <div class="container">
        <h1 class="decoration">Deal or no deal</h1>
        <!--<div id="alertaMal" class="alert alert-danger alert-dismissible" role="alert">
            Selecciona un maletin que no hayas clickeado anteriormente.
            <button type="button" class="close" onclick="ocultarAlerta('alertaMal');">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>-->
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col">
                <div class="centrar">
                    @for (int i = 0; i < 13; i++)
                    {
                        for (int a = 0; a < 26; a++)
                        {
                            if (i == ViewBag.Maletines[a].Importe)
                            {
                                if (ViewBag.Maletines[a].estaAbierto)
                                {
                                    <p class="encuadrePrecios efectoSombra precioFueSeleccionado">$@(ViewBag.DevolverValoresPosiblesMaletines[i])</p>
                                    <br>
                                }
                                else
                                {
                                    <p class="encuadrePrecios efectoSombra">$@(ViewBag.DevolverValoresPosiblesMaletines[i])</p>
                                    <br>
                                }
                            }
                        }
                    }
                </div>
            </div>
            <div class="col-6">
                <div class="centrar">
                    @for (int k = 0; k < 26; k++)
                    {
                        if (ViewBag.Maletines[k].estaAbierto)
                        {
                            <a href="@Url.Action("eleccionMaletin", "Juego", new { maletin = (k) })" class="noVerComoLink">
                                <img src="~/Content/Imagenes utilizadas/Maletines/@((k + 1) + " Maletas.png")" alt="@("Maletas" + (k + 1))" width="100" class="maletinFueSeleccionado">
                            </a>
                        }
                        else if (ViewBag.Maletines[k].esMiMaletin)
                        {
                                <img src="~/Content/Imagenes utilizadas/Maletines/@((k+1)+" Maletas.png")" alt="@("Maletas"+(k+1))" width="100" class="maletinEsElMaletin">
                        }
                        else
                        {
                            <a href="@Url.Action("eleccionMaletin", "Juego", new { maletin = (k) })" class="noVerComoLink">
                                <img src="~/Content/Imagenes utilizadas/Maletines/@((k + 1) + " Maletas.png")" alt="@("Maletas" + (k + 1))" width="100">
                            </a>
                        }
                    }
                </div>
            </div>
            <div class="col">
                <div class="centrar">
                    @for (int z = 13; z < 26; z++)
                    {
                        for (int a = 0; a < 26; a++)
                        {
                            if (z == ViewBag.Maletines[a].Importe)
                            {
                                if (ViewBag.Maletines[a].estaAbierto)
                                {
                                    <p class="encuadrePrecios efectoSombra precioFueSeleccionado">$@(ViewBag.DevolverValoresPosiblesMaletines[z])</p>
                                    <br>
                                }
                                else
                                {
                                    <p class="encuadrePrecios efectoSombra">$@(ViewBag.DevolverValoresPosiblesMaletines[z])</p>
                                    <br>
                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

